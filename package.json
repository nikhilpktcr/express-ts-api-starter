{
  "name": "@nikhil-plava/node-ts-boilerplate",
  "version": "1.0.0",
  "description": "A production-ready Node.js + TypeScript boilerplate with Express, MVC architecture, security features, and best practices",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "node scripts/eslint-report.js && nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint --ext .ts,.js .",
    "lint:fix": "eslint --ext .ts,.js . --fix",
    "lint:report": "eslint --ext .ts,.js . --format json -o eslint-report.json && node scripts/eslint-report.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "boilerplate",
    "mvc",
    "rest-api",
    "authentication",
    "mongodb",
    "mongoose",
    "helmet",
    "cors",
    "validated",
    "starter-template"
  ],
  "author": "Nikhil Plava <nikhil@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikhil-plava/node-ts-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/nikhil-plava/node-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/nikhil-plava/node-ts-boilerplate#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-throttle": "^2.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tsconfig/node20": "^20.1.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
